   int64_t* const lsrtp = &irt;
   ADD_TO_PC(1);
   if(state->llbit)
   {
      const uint32_t address = get_write_address(lsaddr);
      if (address != 0)
      {
        const uint32_t word = (uint32_t)(*lsrtp);
        write_word_to_memory(address, word);
        CHECK_MEMORY(address)
      }
      //is it right???
      state->llbit = 0;
      *lsrtp = 1;
   }
   else
   {
      *lsrtp = 0;
   }
}

